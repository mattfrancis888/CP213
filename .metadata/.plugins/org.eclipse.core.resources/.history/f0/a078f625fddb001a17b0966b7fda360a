package exam;
import java.util.Arrays;
public class hey {
	 public void permute(int n, int[] a) {
		 if(n == 1) {
//			 System.out.println(a[1]);
			
			} else {
			 for(int i =0; i <= n; i ++) {
				 int temp = a[i];
                 a[i] = a[n];
                 a[n]=temp;
                 //swap a[i] with a[n]
                 permute(n-1, a);
                 //swap a[i] and [an]
                 temp = a[i];
                 a[i] = a[n];
                 a[n]=temp;
				 
			 }
			 System.out.println(Arrays.toString(a));
		 }
	 }
	 public static void main(String[] args) {
		 hey test = new hey();
		 int a[] = {0,7,8,9};
		 test.permute(3, a);
	 }
}
